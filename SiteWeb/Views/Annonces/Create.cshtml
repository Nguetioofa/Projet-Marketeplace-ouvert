@    using ModelsLibrary.Models
@    using SiteWeb.Services.Interfaces
@inject IAnnonceService _annonceService
@model AnnonceL

@{
	ViewData["Title"] = "Create";
}

<hr />


<div class="container margin_60_35">
	<div class="row justify-content-center">
		<div class="col-lg-8">
			<div class="write_review">
				<h1>Ecrivez votre annonce pour un jouet specifique</h1>
				<!-- /rating_submit -->
				<form method="post" asp-action="Create" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					@if (ViewBag.ErrorMessage != null)
					{
						<div class="alert alert-danger mx-auto">@ViewBag.ErrorMessage</div>
					}
					<div class="form-group">
						<label asp-for="Titre">Titre de votre annonce</label>
						<input asp-for="Titre"  class="form-control" type="text" placeholder="">
						<span asp-validation-for="Titre" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label asp-for="DescriptionAnnonce">Votre annonce</label>
						<textarea asp-for="DescriptionAnnonce" class="form-control" style="height: 180px;" placeholder=""></textarea>
						<span asp-validation-for="DescriptionAnnonce" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label>Ajouter vos photos (optionel)</label>
						<div class="fileupload">
							<div class="fileupload"><input type="file" multiple name="images" accept="image/*"></div>
						</div>
					</div>

					<button type="submit" class="btn_1">Ajouter</button>
				</form>
				<div>
					<a asp-action="Index">Back to List</a>
				</div>
			</div>
		</div>
	</div>
	<!-- /row -->
</div>