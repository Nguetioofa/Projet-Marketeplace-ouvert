@model ToyBoxModel


<div class="col-6 col-md-4 col-xl-3">
	<div class="grid_item">
		<span class="ribbon new">Nouveau</span>
		<figure>
			<a asp-controller="Jouets" asp-action="Details" asp-route-id="@Model.Id">
				@if (@Model.Photo is not null)
				{
					<img class="img-fluid lazy" src="@Model.Photo.UrlP" alt="@Model.Nom">
				}else
				{
					<img class="img-fluid lazy" src="/AllaiaEcommerce/img/products/product_placeholder_square_medium.jpg" alt="@Model.Nom">
				}
			</a>
		</figure>
		<a asp-controller="Jouets" asp-action="Details" asp-route-id="@Model.Id">
			<h3>@Model.Nom</h3>
		</a>
		<div class="price_box">
			<span class="new_price">@Model.Prix.ToString().Split(",0")[0] Fcfa</span>
		</div>
		<ul>
			@if (Model.AcceptAchat)
			{
				<li><a href="#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Achater"><i class="ti-shopping-cart"></i><span>Achater</span></a></li>
			}
			@if (Model.AcceptAchat)
			{
				<li><a href="#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Echanger"><i class="ti-control-shuffle"></i><span>Echanger</span></a></li>
			}
		</ul>
	</div>
</div>