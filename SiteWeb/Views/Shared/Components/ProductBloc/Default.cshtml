@using ModelsLibrary.Models.Toys
@model List<ToyBoxModel>

@if (Model.Count == 0)
{
    <p>Aucun jouet disponible disponible.</p>
}
else
{

	<div class="container margin_60_35">
		<div class="main_title">
			<h2>
				<a asp-controller="Jouets" asp-action="Categorie" asp-route-name="Poupées et peluches">
					Poupées et peluches
				</a> 
			</h2>
			<span>Poupées et peluches</span>
		</div>
		<div class="owl-carousel owl-theme products_carousel">

			@foreach (var jouet in Model)
			{
				<div class="item">
					<div class="grid_item">
						<span class="ribbon new">Nouveau</span>
						<figure>
							<a asp-controller="Jouets" asp-action="Details" asp-route-id="@jouet.Id">
								@if (jouet.Photo is not null)
								{
									<img class="img-fluid lazy" src="@jouet.Photo.UrlP" alt="@jouet.Nom">
								}
								else
								{
									<img class="img-fluid lazy" src="/AllaiaEcommerce/img/products/product_placeholder_square_medium.jpg" alt="@jouet.Nom">
								}
							</a>
						</figure>
						<div class="rating"><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star"></i></div>
						<a asp-controller="Jouets" asp-action="Details" asp-route-id="@jouet.Id">
							<h3>@jouet.Nom</h3>
						</a>
						<div class="price_box">
							<span class="new_price">@jouet.Prix.ToString().Split(",0")[0] Fcfa</span>
						</div>
						<ul>
							@if (jouet.AcceptAchat)
							{
								<li><a href="#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Achater"><i class="ti-shopping-cart"></i><span>Achater</span></a></li>
							}
							@if (jouet.AcceptAchat)
							{
								<li><a href="#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Echanger"><i class="ti-control-shuffle"></i><span>Echanger</span></a></li>
							}
						</ul>
					</div>
				</div>
			}

		</div>
	</div>
}
