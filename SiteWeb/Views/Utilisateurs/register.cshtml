@model UserResisterDto

@{
	ViewData["Title"] = "Register";
	//Layout = "~/Views/StatutUser/Details.cshtml";
}


<div class="container margin_30">
	<div class="row justify-content-center">

		<div class="col-xl-6 col-lg-6 col-md-8">
			<div class="box_account">
				<h3 class="new_client">Nouvel utilisateur</h3> <small class="float-right pt-2">* Champs obligatoires</small>
				<div class="form_container">
					<form asp-action="Register">
						@if (ViewBag.ErrorMessage != null)
						{
							<div class="alert alert-danger mx-auto">@ViewBag.ErrorMessage</div>
						}
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="form-group">
							<input asp-for="Email" type="email" class="form-control" id="email_2" placeholder="Email*">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="MotDePasse" type="password" class="form-control" id="password_in_2" placeholder="Password*">
							<span asp-validation-for="MotDePasse" class="text-danger"></span>
						</div>
						<div class="private box">
							<div class="row no-gutters">
								<div class="col-6 pr-1">
									<div class="form-group">
										<input asp-for="Nom" type="text" class="form-control" placeholder="Nom*">
										<span asp-validation-for="Nom" class="text-danger"></span>

									</div>
								</div>
								<div class="col-6 pl-1">
									<div class="form-group">
										<input asp-for="Prenom" type="text" class="form-control" placeholder="Prenom*">
										<span asp-validation-for="Prenom" class="text-danger"></span>
									</div>
								</div>
								<div class="col-12">
									<div class="form-group">
										<input asp-for="Telephone" type="text" class="form-control" placeholder="Numero*">
										<span asp-validation-for="Telephone" class="text-danger"></span>
									</div>
								</div>
							</div>
							<!-- /row -->
							<div class="row no-gutters">
								<div class="col-6 pr-1">
									<div class="form-group">
										<input asp-for="VilleUser" type="text" class="form-control" placeholder="Ville">
										<span asp-validation-for="VilleUser" class="text-danger"></span>

									</div>
								</div>
								<div class="col-6 pl-1">
									<div class="form-group">
										<input asp-for="QuatierUser" type="text" class="form-control" placeholder="Quatier">
										<span asp-validation-for="QuatierUser" class="text-danger"></span>
									</div>
								</div>
							</div>
							<!-- /row -->
						</div>
						<div class="form-group">
							<label class="container_check">
								Accept <a href="#0">Terms and conditions</a>
								<input type="checkbox">
								<span class="checkmark"></span>
							</label>
						</div>

						<div class="text-center"><input type="submit" value="Register" class="btn_1 full-width"></div>
					</form>
					@if (ViewBag.ErrorMessage != null)
					{
						<div class="alert alert-danger">@ViewBag.ErrorMessage</div>
					}
				</div>
				<div class="text-center">
					<a asp-area="" asp-controller="Utilisateurs" asp-action="Login">Avez vous deja un compte? Connexion</a>

				</div>
				<!-- /form_container -->
			</div>
			<!-- /box_account -->
		</div>
	</div>
</div>
<!-- /row -->
<!-- /container -->
